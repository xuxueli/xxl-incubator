<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.apm.admin.dao.IXxlCommonRegistryDao" >
	
	<resultMap id="xxlCommonRegistry" type="com.xxl.apm.admin.core.model.XxlCommonRegistry" >
		<result column="id" property="id" />
		<result column="key" property="key" />
		<result column="data" property="data" />
	</resultMap>

	<sql id="Base_Column_List">
		t.`id`,
		t.`key`,
		t.`data`
	</sql>

	<select id="pageList" parameterType="java.util.HashMap" resultMap="xxlCommonRegistry">
		SELECT <include refid="Base_Column_List" />
		FROM xxl_apm_common_registry AS t
		ORDER BY t.key ASC
		LIMIT #{offset}, #{pagesize}
	</select>

	<select id="load" parameterType="java.util.HashMap" resultMap="xxlCommonRegistry">
		SELECT <include refid="Base_Column_List" />
		FROM xxl_apm_common_registry AS t
		WHERE t.`key` = #{key}
	</select>

	<insert id="add" parameterType="com.xxl.apm.admin.core.model.XxlCommonRegistry" >
		INSERT INTO xxl_apm_common_registry (
			`key`,
			`data`
		) VALUES
		(
			#{xxlCommonRegistry.key},
			#{xxlCommonRegistry.data}
		)
	</insert>

	<update id="update" parameterType="com.xxl.apm.admin.core.model.XxlCommonRegistry"  >
		UPDATE xxl_apm_common_registry AS t
		SET
			t.`data` = #{xxlCommonRegistry.data}
		WHERE t.`id` = #{xxlCommonRegistry.id}
	</update>

	<delete id="cleanDead" parameterType="java.util.HashMap" >
		DELETE FROM xxl_apm_common_registry
		WHERE `key` not in (
			select distinct `key`
			from xxl_apm_common_registry_data
		)
	</delete>

</mapper>