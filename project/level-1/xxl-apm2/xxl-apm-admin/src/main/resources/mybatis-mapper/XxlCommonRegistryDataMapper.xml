<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.apm.admin.dao.IXxlCommonRegistryDataDao" >
	
	<resultMap id="xxlCommonRegistryData" type="com.xxl.apm.admin.core.model.XxlCommonRegistryData" >
		<result column="id" property="id" />
		<result column="key" property="key" />
		<result column="value" property="value" />
		<result column="updateTime" property="updateTime" />
	</resultMap>

	<sql id="Base_Column_List">
		t.`id`,
		t.`key`,
		t.`value`,
		t.`updateTime`
	</sql>

	<update id="refresh" parameterType="com.xxl.apm.admin.core.model.XxlCommonRegistryData"  >
		UPDATE xxl_apm_common_registry_data AS t
		SET
			t.`updateTime` = now()
		WHERE t.`key` = #{xxlCommonRegistryData.key}
			and t.`value` = #{xxlCommonRegistryData.value}
	</update>

	<insert id="add" parameterType="com.xxl.apm.admin.core.model.XxlCommonRegistryData" >
		INSERT INTO xxl_apm_common_registry_data (
			`key`,
			`value`,
			`updateTime`
		) VALUES
		(
			#{xxlCommonRegistryData.key},
			#{xxlCommonRegistryData.value},
			now()
		)
	</insert>

	<select id="findData" parameterType="java.util.HashMap" resultMap="xxlCommonRegistryData">
		SELECT <include refid="Base_Column_List" />
		FROM xxl_apm_common_registry_data AS t
		where t.key = #{key}
		ORDER BY t.value ASC
	</select>

	<delete id="cleanData" parameterType="java.util.HashMap" >
		DELETE FROM xxl_apm_common_registry_data
		WHERE NOW() <![CDATA[ > ]]> DATE_ADD(updateTime, Interval #{timeout} SECOND)
	</delete>

	<delete id="deleteDataValue" parameterType="java.util.HashMap" >
		DELETE FROM xxl_apm_common_registry_data
		WHERE `key` = #{key}
			and `value` = #{value}
	</delete>

	<select id="count" resultType="java.lang.Integer" >
		SELECT count(1)
		FROM xxl_apm_common_registry_data
	</select>

</mapper>